<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ (API 31+) splash screen background.
         The legacy launch_background.xml is ignored on these versions.
         windowSplashScreenBackground sets the solid color behind the icon. -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowSplashScreenBackground">#F1F5F9</item>
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">#F1F5F9</item>
    </style>
</resources>
